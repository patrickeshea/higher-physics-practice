      "socratic_hints": {
        "level1": [
          "Identify a constant-acceleration equation linking u, v, a and s."
        ],
        "level2": [
          "Use v² = u² + 2as and rearrange to s = (v² − u²)/(2a)."
        ],
        "level3": [
          {
            "step": "Formula",
            "mark_award": 0.5,
            "content": "v² = u² + 2as"
          },
          {
            "step": "Substitution",
            "mark_award": 0.5,
            "content": "s = ((7.5)² − (4.0)²)/(2×1.2)"
          },
          {
